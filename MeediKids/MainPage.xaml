<Page
    x:Class="MeediKids.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MeediKids"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="local:Animal">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="200" />
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Image Source="Assets/Animals/sheep_normal.png" Opacity="0.2" Stretch="Uniform" />
        <Canvas>
            <local:Animal Canvas.Left="200" Canvas.Top="40" ActivationText="Moooo!" ActivationDuration="0:0:2"
                          ActivationImage="Assets/Animals/animal_active.png" NormalImage="Assets/Animals/animal_normal.png" ActivationSound="Assets/Animals/animal.wav" />
            <local:Animal Canvas.Left="500" Canvas.Top="200" Height="300" Width="300" ActivationText="DingDing!" ActivationDuration="0:0:6"
                          ActivationImage="Assets/Animals/animal2_active.png" NormalImage="Assets/Animals/animal2_normal.png" ActivationSound="Assets/Animals/animal2.wav" />
            <local:Animal Canvas.Left="800" Canvas.Top="100" ActivationText="Bääähhh!"  ActivationDuration="0:0:4"
                          ActivationImage="Assets/Animals/meedical-owl_normal.png" NormalImage="Assets/Animals/sheep_normal.png" ActivationSound="Assets/Animals/animal2.wav" />
        </Canvas>
    </Grid>
</Page>